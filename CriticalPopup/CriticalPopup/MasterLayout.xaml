                            <FormattedString>
                                <Span x:Name="MediumEntryLetters" BackgroundColor="Transparent"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label x:Name="SmallTextLabel" FontFamily="Calibri Light" FontAttributes="Bold" HorizontalOptions="Start" IsVisible="True" Grid.Row="1" Grid.Column="0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span x:Name="SmallEntryLetters" BackgroundColor="Transparent"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label x:Name="MicroTextLabel" FontFamily="Calibri Light" FontAttributes="Bold" HorizontalOptions="Start" IsVisible="True" Grid.Row="1" Grid.Column="0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span x:Name="MicroEntryLetters" BackgroundColor="Transparent"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>-->
                </Grid>
            </Grid>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>